{
    "extends": "../tslint.json",
    "rules": {
        "rxjs-add": {
            "options": [
                {
                    "allowElsewhere": false,
                    "allowUnused": false,
                    "file": "./src/rxjs-imports.ts"
                }
            ],
            "severity": "error"
        },
        "directive-selector": [
            true,
            "attribute",
            "app",
            "camelCase"
        ],
        "component-selector": [
            true,
            "element",
            "app",
            "kebab-case"
        ]
    }
}